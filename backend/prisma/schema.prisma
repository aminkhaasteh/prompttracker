generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LLMResponse {
  id         Int        @id @default(autoincrement())
  text       String
  createdAt  DateTime   @default(now())
  mentions   Mention[]
}

model Mention {
  id            Int      @id @default(autoincrement())
  brand         String
  normalized    String
  count         Int
  llmResponseId Int
  llmResponse   LLMResponse @relation(fields: [llmResponseId], references: [id])
}
